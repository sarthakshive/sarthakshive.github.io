            }
        }

        @keyframes hexagon-orbit-{i} {
            0% {
                transform: translate(0, 0)
            }
            
            16% {
                transform: translate(((50*((((100+$gap)-(i*$gap))*$hexagones-size)/100)/100)+(36.2*((((100+$gap)-(i*$gap))*$hexagones-size)/100)/100))px, (-50*((((100+$gap)-(i*$gap))*$hexagones-size)/100)/100)px)
